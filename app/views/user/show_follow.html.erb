<% provide(:title, @title) %>
<h1 align="center"><%= @user.username %></h1>
<div align="center">
	<span><%= link_to "View my profile", @user %></span>
	<span><b>Events:</b> <%= @user.events.count %></span>
</div>
<br>
<% if @users.any? %>
    <% @users.each do |user| %>
	    <div align="center" style="padding-left: 20%; text-align: center; padding:5px; border: 2px solid black; border-radius:10px; width:60%; background-color:white;">
	        <%= link_to controller: "user", action: "show", id: user.id do %>
		        <div><%= user.username %> <%= user.followers.count %> followers | <%= user.following.count %> following
	        <% end %>
	    </div>
    <% end %>
<% end %>