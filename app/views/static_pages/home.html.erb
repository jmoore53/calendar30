<h1 align="center">Calendar30 Home</h1>


<style>
ul#menu {
	text-align: center;
    list-style-type: none;
    margin: 0px auto;
    padding: 0px;
}
ul#menu li {
    display:inline;
}
</style>
<div style="position:relative; background-color: rgba(255, 255, 255, 0.5); left:15%; width:70%;" align="center">
	<h2 style="padding:-200px;"> Search</h2>
	<%= form_tag url_for(:controller => 'static_pages', :action => 'home'), :method => 'get' do %>
	  	<div>
	    	<%= text_field_tag :search, params[:search] %>
	    	<%= submit_tag "Search", :name => nil %>
	  	</div>
	  	<div style="padding:5px"></div>
	  	<% if @users %>
			<% @users.each do |user| %>
				<%= link_to controller: "user", action: "show", id: user.id do %>
					<div style="padding:5px; border: 2px solid black; border-radius:10px; width:60%; background-color:white;"><%= user.username %></div>
					<div style="padding:5px"></div>
				<% end %>
			<% end %>
		<% end %>
	<% end %>
	<br>
</div>